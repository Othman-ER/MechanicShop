<div class="@GetDynamicClasses()" style="@GetDynamicStyle()" title="@Slot.RepairTasks">
    <div class="d-flex flex-column justify-content-between h-100" style="font-size: 0.90rem;">
        <div class="mt-1">
            <span class="badge">@($"{Slot.StartAt:HH\\:mm} ➔ {Slot.EndAt:HH\\:mm}")</span>
        </div>
        <div class="d-flex justify-content-between align-items-center">
            @if (Slot.IsOccupied)
            {
                <span class="badge text-sm">@Slot.Vehicle</span>
                <span class="badge text-sm text-warning">@Slot.Labor?.Name</span>
            }
        </div>
    </div>

    @if (!Slot.IsOccupied && Slot.IsAvailable)
    {
        <div class="booking-overlay" @onclick="() => OnNewWorkOrderDialog.InvokeAsync(Slot)" style="cursor: pointer;">
        </div>
    }
    else if (!Slot.IsOccupied && !Slot.IsAvailable)
    {
        <div class="booking-overlay" style="cursor: not-allowed;"></div>
    }

    @if (Slot.IsOccupied)
    {
        <div class="booking-overlay d-flex justify-content-end align-items-start">
            <button class="btn btn-sm btn-secondary me-1 px-1 p-0 fs-6" title="State"
                @onclick="@(() => OnEditWorkOrderStateDialog.InvokeAsync(Slot))">
                <i class="bi bi-activity"></i>
            </button>

            @if (!Slot.WorkOrderLocked)
            {
                <button class="btn btn-sm btn-secondary me-1 px-1 p-0 fs-6" title="Relocate"
                    @onclick="@(() => OnRelocateWorkOrderDialog.InvokeAsync(Slot))">
                    <i class="bi bi-arrow-left-right"></i>
                </button>
                <button class="btn btn-sm btn-secondary me-1 px-1 p-0 fs-6" title="Labor"
                    @onclick="@(() => OnEditWorkOrderLaborDialog.InvokeAsync(Slot))">
                    <i class="bi bi-person-arms-up"></i>
                </button>
                <button class="btn btn-sm btn-secondary me-1 px-1 p-0 fs-6" title="Tasks"
                    @onclick="@(() => OnEditWorkOrderRepairTasksDialog.InvokeAsync(Slot))">
                    <i class="bi bi-wrench-adjustable-circle"></i>
                </button>
                <button class="btn btn-sm btn-secondary me-1 px-1 p-0 fs-6" title="Delete"
                    @onclick="@(() => ConfirmDeleteAsync(Slot))">
                    <i class="bi bi-trash-fill"></i>
                </button>
            }
            <NavLink href="@($"/workorder-details/{Slot.WorkOrderId}")" class="btn btn-sm btn-secondary me-1 px-1 p-0 fs-6">
                <i class="bi bi-info"></i>
            </NavLink>
        </div>
    }
</div>